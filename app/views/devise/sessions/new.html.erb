<% if flash[:email] %>
    <div class="alert alert-success"><%= flash[:email] %></div>
  <% end %>
  <% if flash[:success] %>
    <div class="alert alert-success"><%= flash[:success] %></div>
  <% end %>

  <%= render 'layouts/messages' %>
<div class="bodyDesign">
<form class="new_user" id="new_user" action="/users/sign_in" accept-charset="UTF-8" method="post">
    <div class="container indexContainer">
        <input name="utf8" type="hidden" value="âœ“">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form name="loginForm">
                    <div class="header">
                        <h1 class="login-h1">Social</h1>
                    </div>
                    <div class="form-group">
                        <input type="email" ng-model="user.email" class="form-control boxShadow" placeholder="Email" name="user[email]" id="user_email" required>
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="user.password" class="form-control boxShadow" placeholder="Password" name="user[password]" id="user_password" required>
                    </div>
                    <div class="checkbox">
                        <label id="rememberme">
                            <input type="checkbox">Remember me</label>
                    </div>

                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-default defaultButtonsIndex" name="commit" data-disable-with="Log in">Login</button>
                        </div>
                        <div class="col-md-4">
                            <input type="button" class="btn btn-default defaultButtonsIndex" onclick="location.href='sign_up'" value="Sign Up" />
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-4"></div>
        </div>
    </div>
</form>
</div>